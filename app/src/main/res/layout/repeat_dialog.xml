<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RadioGroup
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <RadioButton
            android:id="@+id/repeat_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안 함"
            android:textSize="20sp"
            android:padding="10dp" />
        <RadioButton
            android:id="@+id/repeat_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일"
            android:textSize="20sp"
            android:padding="10dp" />
        <RadioButton
            android:id="@+id/repeat_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매주"
            android:textSize="20sp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:background="@drawable/edittext_background_line" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textSize="18sp"
                android:layout_margin="15dp" />

        </LinearLayout>

        <RadioButton
            android:id="@+id/repeat_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매월"
            android:textSize="20sp"
            android:padding="10dp" />
        <RadioButton
            android:id="@+id/repeat_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매년"
            android:textSize="20sp"
            android:padding="10dp" />
    </RadioGroup>

</LinearLayout>