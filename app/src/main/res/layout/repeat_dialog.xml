<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RadioGroup
        android:id="@+id/repeat_group"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp" >
        <RadioButton
            android:id="@+id/repeat_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안 함"
            android:textSize="20sp"
            android:padding="10dp" />
        <RadioButton
            android:id="@+id/repeat_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일"
            android:textSize="20sp"
            android:padding="10dp" />
        <RadioButton
            android:id="@+id/repeat_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매주"
            android:textSize="20sp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/edittext_background_line" >
            <TextView
                android:id="@+id/mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:id="@+id/tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:id="@+id/wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:id="@+id/thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:id="@+id/fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:id="@+id/sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토"
                android:textSize="18sp"
                android:layout_margin="15dp" />
            <TextView
                android:id="@+id/sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textSize="18sp"
                android:layout_margin="15dp" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/repeat_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매월"
            android:textSize="20sp"
            android:padding="10dp" />
        <RadioButton
            android:id="@+id/repeat_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매년"
            android:textSize="20sp"
            android:padding="10dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/repeat_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="취소"/>
        <Button
            android:id="@+id/repeat_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="확인"/>
    </LinearLayout>

</LinearLayout>