<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="3"
    android:columnCount="4"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/wakeup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/wakeup"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/sleeping"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sleeping"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/train"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/train"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/car"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/computer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/computer"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/book"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/book"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/food"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/food"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/cleaning"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cleaning"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/muscle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/muscle"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/rest"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rest"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/shower"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/shower"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
    <ImageView
        android:id="@+id/empty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/game"
        android:layout_margin="5dp"
        app:tint="?attr/colorOnPrimary"/>
</GridLayout>